{
    "compilerOptions": {
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "moduleDetection": "force",
      "types": [
        "node"
      ],
    },
    "include":[
      "*.*", "src/**/*", "config/**/*","config/**/*.json","helpers/**/*"
    ],
    "exclude": [
        "node_modules", "tests", "eslint.config.js", "package.json"
    ]
  }