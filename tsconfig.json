{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "moduleDetection": "force",
    "types": [
      "node",
      "mocha",
    ],
  },
  "include": [
    "src",
    "helpers",
    "config",
    "tests",
  ],
  "exclude": [
    "node_modules",
    "ssp-relay-enterprise",
    "package.json",
    "logs"
  ]
}